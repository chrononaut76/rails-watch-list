<%= render "shared/navbar" %>

<div class="container mt-3">
  <h1>Create bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all %>
    <%= f.input :comment %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back to list", list_path(@list) %>
</div>